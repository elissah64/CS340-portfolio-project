
<main>
    <table class='main-table' id='transactions-table'>
        <caption>
            Transactions
        </caption>
        <thead>
            <tr>
                <th>ID</th>
                <th>Book Title</th>
                <th>Patron Name</th>
                <th>Date</th>
                <th>Type</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
                {{#each transactions}}
            <tr>
                <td>{{this.transactionID}}</td>
                <td>{{this.title}}</td>
                <td>{{this.name}}</td>
                <td>{{this.transactionDate}}</td>
                <td>{{this.transactionType}}</td>
                <td>
                    <button onClick="deleteTransaction({{this.transactionID}})">Delete</button>
                </td>
            </tr>
                {{/each}}
        </tbody>
    </table>
    <script src="/js/delete_transaction.js"></script>
</main>

<div>
    <form id="add-transaction-form" action="/add-transaction-form" method="POST">
        <fieldset>
            <legend>
                ADD TRANSACTION
            </legend>
            <table class='form-table'>
                <caption class="form-cap">
                    Please fill out the form below
                </caption>
                <tbody>
                    <tr>
                        <td><label for="transactionID">ID:</label></td>
                        <td><input id="transactionID" type="number" name ="transactionID" required></td>
                        <td>*Required Field</td>
                    </tr>
                  <tr>
                        <td><label for="title">Book Title:</label></td>
                        <td>
                            <select id="title" name="title">
                                <option value="">Select Book Title</option>
                                {{#each books}}
                                <option value="{{this.title}}">{{this.title}}</option>
                                {{/each}}
                            </select>
                        </td>
                        <td>*Required Field</td>
                    </tr>
                    <tr>
                        <td><label for="name">Patron Name:</label></td>
                        <td>
                            <select id="name" name="name">
                                <option value="">Select Patron Name</option>
                                {{#each patrons}}
                                <option value="{{this.name}}">{{this.name}}</option>
                                {{/each}}
                            </select>
                        </td>
                        <td>*Required Field</td>
                    </tr>
                    <tr>
                        <td><label for="transactionDate">Date:</label></td>
                        <td><input id="transactionDate" name="transactionDate" type="date" required></td>
                        <td>*Required Field</td>
                    </tr>
                    <tr>
                        <td><label for="transactionType">Type:</label></td>
                        <td>
                            <select id="transactionType" name="transactionType">
                                <option value="checkout">Checkout</option>
                                <option value="return">Return</option>
                            </select>
                        </td>
                        <td>*Required Field</td>
                    </tr>
                </tbody>
            </table>
            <button type="submit">Add</button>
        </fieldset>
    </form>
</div>
