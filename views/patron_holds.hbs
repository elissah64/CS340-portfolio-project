<main>
    <table class='main-table' id='patron-holds-table'>
        <caption>
            Patron Holds
        </caption>
        <thead>
            <tr>
                <th>ID</th>
                <th>Patron Name</th>
                <th>Book Title</th>
                <th>Date Hold Placed</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
                {{#each data}}
            <tr>
                <td>{{this.patron_holdID}}</td>
                <td>{{this.patronID}}</td>
                <td>{{this.bookID}}</td>
                <td>{{this.holdID}}</td>
                <td>
                    <button onClick="deletePatronHold({{this.patron_holdID}})">Delete</button>
                </td>
            </tr>
                {{/each}}
        </tbody>
    </table>
    <script src="/js/delete_patron_hold.js"></script>
</main>

<div>
    <form id="add-patron-hold-form" action="/add-patron-hold" method="POST">
        <fieldset>
            <legend>
                ADD PATRON HOLD
            </legend>
            <table class='form-table'>
                <caption class="form-cap">
                    Please fill out the form below
                </caption>
                <tbody>
                    <tr>
                        <td><label for="name">Patron Name:</label></td>
                        <td><input type="text" name ="name" required=""></td>
                        <td>*Required Field</td>
                    </tr>
                    <tr>
                        <td><label for="title">Book Title:</label></td>
                        <td><input type="text" name ="book" required=""></td>
                        <td>*Required Field</td>
                    </tr>
                    <tr>
                        <td><label for="date">Date Hold Placed:</label></td>
                        <td><input id="date" name="date" type="date" required=""></td>
                        <td>*Required Field</td>
                    </tr>
                </tbody>
            </table>
            <button type="add">Add</button>
        </fieldset>
    </form>
    <form id="add-patron-holds-form" action="/add-patron-holds" method="POST">
        <fieldset>
            <legend>
                UPDATE PATRON HOLD
            </legend>
            <table class='form-table'>
                <caption class="form-cap">
                    Please choose the record you would like to update and enter new information
                </caption>
                <tbody>
                    <tr>
                        <td><label for="patron-hold-select">Select Patron_Hold ID:</label></td>
                        <td>
                            <select id="patron-hold-select" name="patron-hold-select">
                                <option value="1">1</option>
                                <option value="2">2</option>
                                <option value="3">3</option>
                            </select>
                        </td>
                        <td>*Required Field</td>
                    </tr>
                    <tr>
                        <td><label for="name">Patron Name:</label></td>
                        <td><input type="text" name ="name"></td>
                        <td></td>
                    </tr>
                    <tr>
                        <td><label for="title">Book Title:</label></td>
                        <td><input type="text" name ="book"></td>
                        <td></td>
                    </tr>
                    <tr>
                        <td><label for="date">Date Hold Placed:</label></td>
                        <td><input id="date" name="date" type="date"></td>
                        <td></td>
                    </tr>
                </tbody>
            </table>
            <button type="update">Update</button>
        </fieldset>
    </form>
</div>
